    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Dummy product data (replace with actual backend data)
            const products = [
            {
                    id: 1,
                    name: 'Pepper Spray',
                    price: 25,
                    description: 'Effective pepper spray for women safety',
                    image: 'https://m.media-amazon.com/images/I/61kqjJ9kCoL.jpg'
                },
                {
                    id: 2,
                    name: 'Safety Alarm',
                    price: 15,
                    description: 'Compact alarm to alert others in emergencies',
                    image: 'https://m.media-amazon.com/images/I/41A14UAEsJL.jpg'
                },
                {
                    id: 3,
                    name: 'Self-defense Keychain',
                    price: 10,
                    description: 'Portable self-defense tool in the form of a keychain',
                    image: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTBW2cr-S9JMF6M7LYV9vdsL6POxricAmXUyQ&s'
                },
                {
                    id: 4,
                    name: 'Self-defense Safety Stick',
                    price: 5,
                    description: 'This is a self-defense tool made from durable materials like stainless steel. It is adjustable in length and can be used for self-defense in various situations',
                    image: 'https://www.trpmart.com/wp-content/uploads/2018/06/26-Inches-Branded-Baton-600x600.jpg'
                },
                {
                    id: 5,
                    name: 'Lanyard Self-defence Gadgets',
                    price: 6,
                    description: 'The innovative dual hole design allows for flexible usage',
                    image: 'https://i.ytimg.com/vi/Yv5uJqe8vCI/maxresdefault.jpg'
                },
                {
                    id: 6,
                    name: 'Pocket Knife Keychains',
                    price: 4,
                    description: 'The portable mini knife is small in size, light in weight, easy for you to suspend it on your waist belt or backpack belt, can use it anytime anywhere for unexpected needs.',
                    image: 'https://i5.walmartimages.com/asr/94c01083-e0ed-438f-845f-760368c9d0e1_1.f0653b805ef14e6cbb81610cd061ae97.jpeg'
                },
                
            ];

            // Display product data
            const productListElement = document.getElementById('product-list');
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.classList.add('product-card');

                productCard.innerHTML = `
                    <div>
                        <h3>${product.name}</h3>
                        <p>${product.description}</p>
                        <p><strong>Price:</strong> $${product.price}</p>
                        <button onclick="purchaseProduct(${product.id})">Purchase</button>
                        <button onclick="payWithPolygon(${product.price})">Pay with Polygon</button>
                    </div>
                    <img src="${product.image}" alt="${product.name}" />
                `;

                productListElement.appendChild(productCard);
            });
        });

        // Function to simulate product purchase
        function purchaseProduct(productId) {
            alert(`Product with ID ${productId} purchased successfully!`);
            window.location.href = `/purchase/${productId}`;


        }

        // Function to handle payment with Polygon using MetaMask
        async function payWithPolygon(price) {
            // Check if MetaMask is installed
            if (typeof window.ethereum === 'undefined') {
                alert('Please install MetaMask to proceed with payment.');
                return;
            }

            try {
                // Request account access if needed
                await window.ethereum.request({ method: 'eth_requestAccounts' });

                // Get the current user's address
                const accounts = await window.ethereum.request({ method: 'eth_accounts' });
                const senderAddress = accounts[0];

                // Define the transaction parameters
                const transactionParameters = {
                    to: '0xRecipientAddress', // Replace with the recipient's address
                    from: senderAddress, // Current user's address
                    value: (price * Math.pow(10, 18)).toString(16), // Convert price to wei
                    gas: '21000', // Gas limit
                };

                // Send the transaction
                const txHash = await window.ethereum.request({
                    method: 'eth_sendTransaction',
                    params: [transactionParameters],
                });

                alert(`Transaction sent! Hash: ${txHash}`);
            } catch (error) {
                console.error(error);
                alert('Transaction failed. Please try again.');
            }
        }
    </script>
