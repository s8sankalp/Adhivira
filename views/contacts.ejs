<%- include('partials/header') %>

<main>
  <!-- Link to FontAwesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
  <!-- Inline CSS for styling -->
  <style>
    /* Set up the main gradient background */
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(135deg, #e04c3f 0%, #5dc7ee 100%);
      color: #ffffff;
      min-height: 100vh;
    }

    /* Main container styling */
    main {
      text-align: center;
      padding: 20px;
      max-width: 1200px;
      width: 100%;
    }

    /* Title styling */
    main h1 {
      font-size: 2.5em;
      color: #ffffff;
      margin-bottom: 30px;
    }

    /* Emergency contacts container styling */
    #emergency-contacts {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      padding: 0 10px;
    }

    /* Contact card styling */
    .contact-card {
      background: linear-gradient(145deg, #ffffff, #f0f0f0);
      border-radius: 15px;
      padding: 20px;
      width: 250px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      color: #333;
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Hover effect on contact cards */
    .contact-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }

    /* Contact name styling */
    .contact-card h3 {
      font-size: 1.8em;
      margin: 0;
      color: #e04c3f;
    }

    /* Contact details styling */
    .contact-card p {
      font-size: 1em;
      margin: 10px 0;
      color: #555;
    }

    /* Button styling with icons */
    .contact-card .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin: 5px;
      padding: 10px 15px;
      background: linear-gradient(145deg, #5dc7ee, #e04c3f);
      border: none;
      border-radius: 8px;
      color: #ffffff;
      font-size: 1em;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    /* Button hover effect */
    .contact-card .btn:hover {
      background: linear-gradient(145deg, #e04c3f, #5dc7ee);
    }

    /* Footer styling */
    footer {
      padding: 10px;
      color: #ffffff;
      font-size: 0.9em;
      text-align: center;
      margin-top: 20px;
    }
  </style>

  <!-- Page Content -->
  <h1>Your Emergency Contacts</h1>
  <div id="emergency-contacts">
    <% contacts.forEach(contact => { %>
      <div class="contact-card">
        <h3><%= contact.name %></h3>
        <p>Phone: <%= contact.phone %></p>
        <p>Email: <%= contact.email %></p>
        <a href="tel:<%= contact.phone %>" class="btn">
          <i class="fas fa-phone"></i> Call
        </a>
        <a href="sms:<%= contact.phone %>" class="btn">
          <i class="fas fa-comment"></i> Message
        </a>
      </div>
    <% }) %>
  </div>
</main>

