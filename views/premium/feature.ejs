    <style>
        /* Basic body styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #e04c3f 0%, #5dc7ee 100%);
        }

        /* Container for feature cards */
        .features-container {
            display: flex;
            justify-content: space-between;
            width: 70%;
            max-width: 1200px;
            gap: 40px;
            margin-top:20vh;
        }

        /* Style for each feature card */
        .feature-card {
            flex: 1;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            color: #fff;
            text-align: center;
            transition: transform 0.3s;
        }

        /* Gradient styles for the cards */
        .feature-card.basic {
            background: linear-gradient(135deg, #b671f3, #4a00e0);
        }

        .feature-card.premium {
            background: linear-gradient(135deg, #f37335, #fdc830);
        }

        /* Hover effect */
        .feature-card:hover {
            transform: scale(1.05);
        }

        /* Title styling */
        .feature-title {
            font-size: 1.7em;
            margin-bottom: 10px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Icon style for title */
        .feature-title i {
            margin-right: 10px;
            font-size: 1.2em;
        }

        /* Feature list styling */
        .feature-list {
            list-style: none;
            padding: 0;
            font-size: 1em;
            margin-bottom: 15px;
        }

        .feature-list li {
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1em;
        }

        .feature-list i {
            margin-right: 8px;
            color: rgba(255, 255, 255, 0.8);
        }

        /* Button styling */
        .cta-button {
            margin-top: 15px;
            margin-right: 15px;
            padding: 12px 28px;
            font-size: 1em;
            color: #fff;
            background-color: rgba(0, 0, 0, 0.3);
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .cta-button:hover {
            background-color: rgba(0, 0, 0, 0.5);
        }

        /* Feature images */
        .feature-image {
            width: 60%;
            margin: 15px auto;
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #fff 30%, #f3f4f6 100%);
        color: #333;
        line-height: 1.6;
        overflow-x: hidden; /* Prevents horizontal scroll due to animations */
        background-image: url('https://img.freepik.com/free-vector/white-elegant-texture-wallpaper_23-2148417584.jpg?semt=ais_hybrid'); /* Replace with the actual path of your image */
        background-size: cover; /* Ensures the image covers the whole page */
        background-repeat: no-repeat; /* Prevents the image from repeating */
        background-position: center; /* Centers the image */
        background-attachment: fixed; /* Keeps the background image fixed while scrolling */
        font-family: 'Arial', sans-serif; /* Ensures text remains visible */
      }
      
      /* Keyframes for Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      
      @keyframes slideInLeft {
        from {
          transform: translateX(-100%);
        }
        to {
          transform: translateX(0);
        }
      }
      
      @keyframes slideInRight {
        from {
          transform: translateX(100%);
        }
        to {
          transform: translateX(0);
        }
      }
      
      @keyframes bounceIn {
        0% {
          transform: scale(0.3);
        }
        50% {
          transform: scale(1.05);
        }
        70% {
          transform: scale(0.9);
        }
        100% {
          transform: scale(1);
        }
      }
      
      /* Animated Classes */
      .animated-section {
        animation: fadeIn 1s ease-out forwards;
      }
      
      .animated-card {
        animation-duration: 1s;
        animation-fill-mode: forwards;
      }
      
      .slideInLeft {
        animation-name: slideInLeft;
      }
      
      .slideInRight {
        animation-name: slideInRight;
      }
      
      .bounceIn {
        animation: bounceIn 1.2s ease-out;
      }
      
      /* Header Styles */
